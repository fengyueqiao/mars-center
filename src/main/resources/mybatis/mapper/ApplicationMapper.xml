<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.fengyueqiao.marscenter.infrastructure.tunnel.database.ApplicationTunnel">
    <sql id="ALL_COLUMNS">
        id,
        app_name,
        app_desc,
        template_id,
        extend_template_profile,
        group_id,
        creator,
        modifier,
        created_time,
        modified_time,
        is_deleted
    </sql>

    <sql id="COMMON_SELECT">
        SELECT
        <include refid="ALL_COLUMNS"/>
        FROM mars_app_info
    </sql>

    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="ApplicationDO">
        INSERT INTO metric(
            <include refid="ALL_COLUMNS"/>
        ) VALUES (
        null,
        #{appName},
        #{appDesc},
        #{templateId},
        #{extendTemplateProfile},
        #{groupId},
        #{creator},
        #{modifier},
        UNIX_TIMESTAMP(),
        UNIX_TIMESTAMP(),
        0
        )
    </insert>

    <delete id="delete" parameterType="map">
        UPDATE
            mars_app_info
        SET
            is_deleted=1,
            modifier = #{modifier},
            modified_time = UNIX_TIMESTAMP()
        WHERE
            id = #{id} AND IS_DELETED = 0
    </delete>

    <select id="listByGroupId" resultType="ApplicationDO" parameterType="map">
        <include refid="COMMON_SELECT"/>
        WHERE group_id = #{groupId} and IS_DELETED = 0
    </select>

    <select id="getByName" resultType="ApplicationDO" parameterType="map">
        <include refid="COMMON_SELECT"/>
        WHERE app_name = #{appName} and IS_DELETED = 0
    </select>
</mapper>